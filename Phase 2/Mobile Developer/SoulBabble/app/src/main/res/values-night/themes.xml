<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.SoulBabble" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/background_light</item>

        <!-- Ripple effect color -->
        <item name="colorControlHighlight">@color/ripple_color</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>

    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_icon_color_inactive</item>
        <item name="itemTextColor">@color/bottom_nav_item_text_color_inactive</item>
        <item name="android:background">@color/bottom_nav_background</item>
    </style>

    <style name="RoundedImageViewShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.TransparentStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar transparan -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Ikon gelap di status bar -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.SoulBabble" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>
