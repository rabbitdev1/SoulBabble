<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoulBabble" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color (blue). -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_secondary</item>
        <item name="colorOnPrimary">@color/background_light</item>

        <!-- Secondary brand color (orange accent). -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/green_natural</item>
        <item name="colorOnSecondary">@color/background_light</item>

        <!-- Background and text colors. -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_primary</item>

    </style>
</resources>
